@model AllCarsViewModel


@if (!Model.Cars.Any())
{
    <h1>There are no cars to view.</h1>
}
else
{
    <form method="get" class="example" asp-controller="Cars" asp-action="ViewCars">
        <input asp-for="SearchTerm" type="text" placeholder="Search by make...">
        <button type="submit"><i class="fa fa-search"></i></button>
    </form>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Make</th>
                <th scope="col">Model</th>
                <th scope="col">Liscence Plate</th>
                <th scope="col">Engine Cubature</th>
                <th scope="col">Color</th>
                <th scope="col">Horse Power</th>
                <th scope="col">Owner Name</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.Cars)
            {
                <tr>
                    <td>@car.Make</td>
                    <td>@car.Model</td>
                    <td>@car.LicensePlate</td>
                    <td>@car.EngineCubature Liters</td>
                    <td>@car.Color</td>
                    <td>@car.HorsePower HP</td>
                    <td>@car.OwnerName</td>
                    <td>
                        <a type="button" class="btn btn-success"
                           asp-controller="Cars"
                           asp-action="EditCar"
                           asp-route-CarId="@car.Id"
                           a>Edit</a>
                    </td>
                    <td>
                        <a type="button" class="btn btn-danger"
                           asp-controller="Cars"
                           asp-action="DeleteCar"
                           asp-route-CarId="@car.Id"
                           a>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <link rel="stylesheet" href="~/css/cars.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}
